{
  "tasks": {
    "cache": "deno cache --reload dpp/*.ts",
    "check": "deno check dpp/*.ts",
    "fix": "deno lint --fix dpp",
    "upgrade": "deno run -A jsr:@molt/cli dpp/*.ts --write"
  },
  "lint": {
    "include": [
      "dpp/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "indentWidth": 2,
    "lineWidteh": 80,
    "include": [
      "dpp/"
    ]
  },
  "lock": false
}
